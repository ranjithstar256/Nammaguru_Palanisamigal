<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="205dp"
    android:layout_gravity="top"
    android:layout_marginTop="@dimen/my_value_8"
    android:layout_marginRight="@dimen/my_value_16"
    android:layout_marginBottom="@dimen/my_value_8"
    android:background="@color/color_white"
    android:elevation="10dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="4dp"
    card_view:cardMaxElevation="6dp">

    <LinearLayout
        android:id="@+id/layout_click"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/img_guru"
                android:layout_width="260dp"
                android:layout_height="144dp"
                android:scaleType="fitXY" />

            <pl.droidsonroids.gif.GifTextView
                android:id="@+id/loading"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@drawable/loading_icon"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/img_play"
                android:layout_width="@dimen/my_value_24"
                android:layout_height="@dimen/my_value_24"
                android:layout_gravity="center"
                android:background="@drawable/ic_play" />

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="@dimen/my_value_16"
            android:orientation="vertical">


            <TextView
                android:paddingTop="@dimen/my_value_2"
                android:paddingBottom="@dimen/my_value_2"
                android:id="@+id/txt_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="@dimen/my_value_16"
                android:ellipsize="end"
                android:fontFamily="@font/l_regular"
                android:maxLines="1"
                android:text="10 Stunning Spots In Melbourne Thatâ€™ll Up Your Instagram Game (Near Muslim-Friendly Eateries!)"
                android:textColor="@color/color_dark_green"
                android:textSize="@dimen/my_value_16" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
