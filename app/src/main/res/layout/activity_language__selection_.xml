<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical"
    tools:context=".activities.Language_Selection_Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/my_value_16"
        android:paddingTop="@dimen/my_value_14"
        android:paddingRight="@dimen/my_value_16"
        android:paddingBottom="@dimen/my_value_10"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:padding="5dp">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/my_value_24"
                android:layout_height="@dimen/my_value_24"
                android:background="@drawable/ic_back_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/my_value_16"
                android:fontFamily="@font/l_regular"
                android:gravity="center"
                android:text="@string/select_language"
                android:textColor="@color/color_header"
                android:textSize="@dimen/my_value_18" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/l_regular"
            android:gravity="center"
            android:layout_marginBottom="@dimen/my_value_10"
            android:text="@string/select_language"
            android:textColor="@color/color_dark_green"
            android:textSize="@dimen/my_value_18" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/my_value_56"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_tamil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginLeft="@dimen/my_value_56"
                android:layout_marginRight="@dimen/my_value_56"
                android:layout_weight="1"
                android:background="@drawable/corner_white"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_tamil_tick"
                    android:layout_width="@dimen/my_value_24"
                    android:layout_height="@dimen/my_value_24"
                    android:layout_marginLeft="@dimen/my_value_16"
                    android:src="@drawable/ic_checked"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_tamil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:fontFamily="@font/l_regular"
                    android:gravity="left"
                    android:text="தமிழ் "
                    android:textColor="@color/color_dark_bg"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/my_value_56"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout

                android:id="@+id/layout_english"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginLeft="@dimen/my_value_56"
                android:layout_marginRight="@dimen/my_value_56"
                android:layout_weight="1"
                android:background="@drawable/corner_white"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_english_tick"
                    android:layout_width="@dimen/my_value_24"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/my_value_16"
                    android:src="@drawable/ic_checked"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_english"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:fontFamily="@font/l_regular"
                    android:gravity="left"
                    android:text="English "
                    android:textColor="@color/color_dark_bg"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/my_value_56"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="@dimen/my_value_40"
            android:layout_marginRight="24dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_go"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginLeft="@dimen/my_value_100"
                android:layout_marginRight="@dimen/my_value_100"
                android:layout_weight="1"
                android:background="@drawable/round_radius"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:fontFamily="@font/l_regular"
                    android:gravity="left"
                    android:text="@string/go"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/my_value_20" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>